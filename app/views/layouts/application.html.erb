<!DOCTYPE html>
<html>
<head>
  <title>EpisodeTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
    <%= render 'layouts/header' %>
    </div>
    <div class="hero-unit">
      <% unless flash[:alert].blank? && flash[:notice].blank? %>
        <p class="notice"><%= notice%></p>
        <p class="alert"><%= alert%></p>
      <% end %>
        <%= yield %>
    </div>
</body>
</html>
